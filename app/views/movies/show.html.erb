
<% content_for :body do %>
	<table class="table1">
		<tr>
		<td colspan="3" class="title"> <%= @movie.title%> </td>
		</tr>

		<tr>
		<td> <div class="div1"> </div></td>
		<td>  <br> <img src='<%= @movie.poster %>' class="poster"> </td>
		<td> <div class="div2"> </div></td>
		</tr>

		<tr> <td> </td>
		<td class="text2"> <br> <%= @movie.plot %> </td>
		<td> </td>
		</tr>
		<tr> <td> </td>
		<td class="text3"> <br> <br>  <p id="casttitle">  CAST </p>
			<% @movie.cast_members.each do |member| %>
			<%= member.full_name + ', '%>
			<% end %>
		</td> <td> </td>
		</tr>	
	</table>
	<div class="backbutton"> <%= link_to('Back to the future', '/movies') %> </div>
<% end %>

